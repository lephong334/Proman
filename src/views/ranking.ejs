<%- include('layouts/header.ejs') %>

<title>Xếp hạng</title>
</head>

<body>
  <%- include('layouts/nav.ejs') %>
  <div class="content-posts active" id="posts">
    <div class="primary-content" style="width: 100%;">
    <h3 class="text-center">BẢNG XẾP HẠNG CÁC CÁ NHÂN DỰ THI</h3>
    <h6 class="text-center">Cập nhật: 14/12/2020</h6>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
                <tr class="table-primary">
                  <th scope="col">Hạng</th>
                  <th scope="col">Người dùng</th>
                  <th scope="col">Số bài đăng</th>
                  <th scope="col">Lượt ủng hộ</th>
                </tr>
              </thead>
              <tbody>
                <% ranking.forEach(function(user){ %>
                <tr>
                  <th scope="row"><%= user.rank %></th>
                  <td><%= user.name %></td>
                  <td><%= user.posts %></td>
                  <td><%= user.votes %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  </div>

  <%- include('layouts/footer.ejs') %>