  <!--Wall with Post -->
  <div class="content-posts active" id="posts">
    <div class="primary-content">
      <div id="posts-container" class="container-fluid container-posts">
        <div class="row text-right">
          <a class="btn" role="button">Gần nhất <i class="fa fa-clock-o" style="color: #ff2600"></i></a> |
          <a class="btn" role="button">Nổi bật <i class="fa fa-arrow-up" style="color: #7FFF00"></i></a>
        </div>

        <!-- List all posts -->
        <% posts.forEach(function(post){ %>
        <div class="card-post">
          <div class="row">
            <div class="col-xs-3 col-sm-2">
              <a href="#" title="Profile">
                <img src="img/user.jpg" alt="User name" class="img-circle img-user">
              </a>
            </div>
            <div class="col-xs-9 col-sm-10 info-user">
              <h3><a href="#" title="Profile"><%= post.owner %></a></h3>
              <p><i><%= post.time %></i></p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-sm-offset-2 data-post">
              <img src="<%= post.image %>" width="500">
              <p><%= post.content %></p>
              <div class="reaction">
                <a class="btn" role="button"><i class="fa fa-arrow-up" style="color: #7FFF00"></i>
                  <%= post.upvotes %></a>
                <a class="btn" role="button"><i class="fa fa-comments"></i> <%= post.comments.length %></a>
                <a class="btn" role="button"><i class="fa fa-share"></i></a>
              </div>
              <div class="comments">
                <div class="more-comments">Bình luận</div>
                <ul>
                  <li><a role="button"><b><%= post.comments[0].owner %></b></a> <%= post.comments[0].content %></li>
                  <li><a role="button"><b><%= post.comments[1].owner %></b></a> <%= post.comments[1].content %></li>
                </ul>
                <form>
                  <input type="text" class="form-control" placeholder="Viết bình luận">
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }); %>

        <div class="card-post">
