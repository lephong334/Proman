<%- include('layouts/header.ejs') %>

<title>Other Person Profile</title>
</head>

<body>
  <%- include('layouts/nav.ejs') %>
  <!--Left Sidebar with info Profile -->
  <div class="sidebar-nav">
      <a href="/user" role="button" title="Profile">
          <img src="img/user2.jpg" alt="User name" class="img-circle img-user">
      </a>
      <h2 class="text-center hidden-xs"><a href="/user" role="button" title="Profile">Khánh</a></h2>
      <p class="text-center user-description hidden-xs">
          <i>Hế lô em</i>
      </p>
  </div>
  <!-- Profile Content -->
  <div class="content-posts profile-content">
    <div class="banner-profile">
    </div>
    <!-- Tab Panel -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="active"><a href="#posts" role="tab" id="postsTab" data-toggle="tab" aria-controls="posts" aria-expanded="true">Bài viết</a></li>
        <li><a href="#profile" role="tab" id="profileTab" data-toggle="tab" aria-controls="profile" aria-expanded="true">Thông tin</a></li>
        <li><a href="#chat" role="tab" id="chatTab" data-toggle="tab" aria-controls="chat" aria-expanded="true">Tin nhắn</a></li>
    </ul>

    <!--Start Tab Content-->
    <div class="tab-content">

        <!-- Tab Posts -->
        <div class="tab-pane fade active in" role="tabpanel" id="posts" aria-labelledby="postsTab">
            <div id="posts-container" class="container-fluid container-posts">
                <div class="card-post">
                    <div class="row">
                        <div class="col-xs-3 col-sm-2">
                            <a href="/user" role="button" title="Profile">
                                <img src="img/user2.jpg" alt="My User" class="img-circle img-user">
                            </a>
                        </div>
                        <div class="col-xs-9 col-sm-10 info-user">
                            <h3><a href="/user" role="button" title="Profile">Khánh</a></h3>
                            <p><i>05/06/2020</i></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class=" col-sm-8 col-sm-offset-2 data-post">
                            <p>Cái gì thế nhỉ</p>
                            <img src="img/post.jpg" alt="image post" class="img-post">
                            <div class="reaction">
                              <a class="btn" role="button"><i class="fa fa-arrow-up" style="color: #7FFF00"></i>
                                500</a>
                              <a class="btn" role="button"><i class="fa fa-comments"></i> 1</a>
                              <a class="btn" role="button"><i class="fa fa-share"></i></a>
                            </div>
                            <div class="comments">
                                <div class="more-comments">Bình luận</div>
                                <ul>
                                  <li><b>Phong</b> Wow!</li>
                                </ul>
                                <form>
                                  <input type="text" class="form-control" placeholder="Viết bình luận">
                                  <input type="submit" class="form-control btn" value="Gửi">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="loading">
                <img src="img/load.gif" alt="loader">
            </div>
        </div><!-- end Tab Posts -->

        <!--Start Tab Profile-->
        <div class="tab-pane fade" role="tabpanel" id="profile" aria-labelledby="profileTab">
            <div class="container-fluid container-posts">
                <div class="card-post">
                    <ul class="profile-data">
                        <li><b>Người dùng:</b> duykhanh</li>
                        <li><b>Tuổi:</b> 23</li>
                        <li><b>Nghề nghiệp:</b> Lập trình viên</li>
                    </ul>
                    <p><a href="#" title="edit profile"><i class="fa fa-pencil" aria-hidden="true"></i> Sửa thông tin</a></p>
                </div>
            </div>
        </div><!-- end tab Profile -->

        <!-- Start Tab chat-->
        <div class="tab-pane fade" role="tabpanel" id="chat" aria-labelledby="chatTab">
            <div class="container-fluid container-posts">
                <div class="card-post">
                    <div class="scrollbar-container">
                        <div class="row row-user-list">
                            <div class="col-sm-2 col-xs-3">
                                <img src="img/user2.jpg" alt="User name" class="img-circle img-user">
                            </div>
                            <div class="col-sm-7 col-xs-9">
                                <p><b>User Name</b> <span class="badge">1</span></p>
                                <p class="chat-time">An hour ago</p>
                                <p>Lorem ipsum</p>
                            </div>
                            <div class="col-sm-3 hidden-xs">
                                <p><a href="#" title="Replay"><span class="badge badge-replay">Replay ></span></a></p>
                            </div>
                        </div>
                        <div class="row row-user-list">
                            <div class="col-sm-2 col-xs-3">
                                <img src="img/user3.jpg" alt="User name" class="img-circle img-user">
                            </div>
                            <div class="col-sm-7 col-xs-9">
                                <p><b>User Name</b></p>
                                <p class="chat-time">Yesterday</p>
                                <p>Lorem ipsum</p>
                            </div>
                            <div class="col-sm-3 hidden-xs">
                                <p><a href="#" title="Start chat"><span class="badge badge-message">Start chat ></span></a></p>
                            </div>
                        </div>
                        <div class="row row-user-list">
                            <div class="col-sm-2 col-xs-3">
                                <img src="img/user4.jpg" alt="User name" class="img-circle img-user">
                            </div>
                            <div class="col-sm-7 col-xs-9">
                                <p><b>User Name</b></p>
                                <p class="chat-time">2 days ago</p>
                                <p>Lorem ipsum</p>
                            </div>
                            <div class="col-sm-3 hidden-xs">
                                <p><a href="#" title="Start chat"><span class="badge badge-message">Start chat ></span></a></p>
                            </div>
                        </div>
                        <div class="row row-user-list">
                            <div class="col-sm-2 col-xs-3">
                                <img src="img/user5.jpg" alt="User name" class="img-circle img-user">
                            </div>
                            <div class="col-sm-7 col-xs-9">
                                <p><b>User Name</b></p>
                                <p class="chat-time">2 days ago</p>
                                <p>Lorem ipsum</p>
                            </div>
                            <div class="col-sm-3 hidden-xs">
                                <p><a href="#" title="Start chat"><span class="badge badge-message">Start chat ></span></a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Tab chat-->

    </div><!-- Close Tab Content-->

  </div><!--Close content posts-->

  <!-- Modal container for settings--->
  <div id="settingsmodal" class="modal fade text-center">
    <div class="modal-dialog">
      <div class="modal-content">
      </div>
    </div>
  </div>
